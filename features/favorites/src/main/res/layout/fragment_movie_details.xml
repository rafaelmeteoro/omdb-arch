<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movieDetailsScreenRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <com.meteoro.omdbarch.components.widgets.manyfacedview.view.ManyFacedView
        android:id="@+id/state_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mfv_content="@layout/state_details_content"
        app:mfv_empty="@layout/state_details_empty"
        app:mfv_error="@layout/state_details_error"
        app:mfv_loading="@layout/state_details_loading"
        app:mfv_state="loading"
        tools:mfv_animateChanges="false"
        tools:mfv_state="content" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>